{
  "name": "mongodb-cron",
  "version": "1.8.0",
  "description": "MongoDB collection as crontab",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean && npx tsc",
    "example": "npm run build && npx ts-node ./src/scripts/example.ts",
    "lint": "npx tslint 'src/**/*.ts?(x)'",
    "prepublish": "npm run build",
    "test": "npm run lint && npx nyc npx hayspec test",
    "speedtest": "npx ts-node ./src/scripts/speedtest.ts"
  },
  "hayspec": {
    "require": [
      "ts-node/register"
    ],
    "match": [
      "./src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpepermint/mongodb-cron.git"
  },
  "keywords": [
    "mongo",
    "mongodb",
    "database",
    "nosql",
    "cron",
    "schedule",
    "scheduling",
    "queue",
    "job",
    "jobs",
    "collection",
    "collections",
    "capped"
  ],
  "author": "Xpepermint (Kristijan Sedlak)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpepermint/mongodb-cron/issues"
  },
  "homepage": "https://github.com/xpepermint/mongodb-cron#readme",
  "peerDependencies": {
    "mongodb": "^4.4.1"
  },
  "devDependencies": {
    "@hayspec/cli": "0.10.2",
    "@hayspec/spec": "0.10.2",
    "@types/dot-object": "2.1.2",
    "@types/node": "18.0.1",
    "mongodb": "4.7.0",
    "nyc": "15.1.0",
    "ts-node": "10.8.2",
    "tslint": "6.1.3",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "cron-parser": "^4.5.0",
    "dot-object": "^2.1.4",
    "es6-sleep": "^2.0.2",
    "moment": "^2.29.3"
  }
}
